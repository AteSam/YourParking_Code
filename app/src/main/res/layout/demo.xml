<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="30dp"
    >

    <TextView
        android:id="@+id/stepTitle"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:textIsSelectable="true"
        app:layout_constraintEnd_toStartOf="@+id/stepButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I have carVID 19 procedure carVID 19 procedure carVID 19 procedure"
        />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/stepButtons"
        android:layout_height="wrap_content"
        android:layout_width="320dp"
        android:contentDescription="@string/dashboard_menu_jobs"
        android:orientation="horizontal"
        app:checkedButton="@+id/jobsMenu"
        android:layout_marginStart="@dimen/MarginXXLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true"
        tools:ignore="MissingClass">

        <Button
            android:id="@+id/positiveButton"
            style="@style/Button.Step"
            android:layout_height="wrap_content"
            android:layout_width="320dp"
            android:text="@string/complete"
            android:drawableTop="@drawable/ic_thumbs_up_24"
            />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</androidx.constraintlayout.widget.ConstraintLayout>